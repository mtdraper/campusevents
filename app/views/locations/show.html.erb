<div id="content">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @location.description %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @location.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @location.longitude %>
</p>

<p>
  <strong>Map url:</strong>
  <%= @location.map_url %>
</p>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
</div>
<div id="aside">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% future_meetings = @location.meetings.select{ |x| x.start_time > DateTime.now}%>

    <% filters = future_meetings[0,5]%>

    <% filters.each do |m|%>
      <tr>
        <td><%= m.name %></td>
        <td><%= m.start_time %></td>
        <td><%= m.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
